<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Sign-Up</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
        <style>
            body {
                font-family: "Montserrat", "Lato", "Roboto";
                background-image: linear-gradient(to right, red , yellow);

            }
        </style>
    </head>
    <body>
        <div class="container">
                        <h2 class="text-center">Sign up now!</h2>
                        <div class="card-body">
                            <form method="post" name="signupForm">
                                <div class="form-group">
                                    <label for="firstName">First name</label>
                                    <input id= "firstName" class= "form-control" type= "text" name= "firstname" placeholder= "Enter your First Name" required />
                                </div>
                                <div class="form-group mt-3">
                                    <label for="lastName">Last name</label>
                                    <input id="lastName" class="form-control" type="text" name="lastname" placeholder="Enter your Last Name" required />
                                </div>
                                <div class="form-group mt-3">
                                    <label for="username">Username</label>
                                    <input id="username" class="form-control" type="text" name="username" placeholder="Enter your Username" required />
                                </div>
                                <div class="form-group mt-3">
                                    <label for="password">Password</label>
                                    <input id="password" class="form-control" type="password" name="password" placeholder="Enter your Password" required />
                                </div>
                                <button class="btn btn-primary mt-3">Submit</button>
                                <p class="mt-3">Already registered with us? <a href="/login">Log In</a></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script> <!--This is needed for sign up confirmation-->
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            $(document).ready(function () {
                $("form[name=signupForm]").on("submit", function (error) {
                    error.preventDefault();
                    
                    var object = {
                        firstname: $("#firstName").val(),
                        lastname: $("#lastName").val(),
                        username: $("#username").val(),
                        password: $("#password").val(),
                    };
                    $.ajax({
                        url: "/sign_up",
                        method: "post",
                        dataType: "json",
                        data: JSON.stringify(object),
                        processData: false,
                        contentType: "application/json",
                        success: function (data) {
                            if (data.status) {
                                Swal.fire({
                                    icon: "success",
                                    title: "You have been registered successfully",
                                })
                                .then((result) => {
                                    location.href = "/";
                                });
                            } else {
                                Swal.fire({
                                    icon: "error",
                                    title: "Some error Occured",
                                    text: data.message,
                                });
                            }
                        },
                        error: function (error) {
                            Swal.fire({
                                icon: "error",
                                title: "An error has occurred",
                                text: error.responseJSON.message,
                            });
                        },
                    });
                });
            });
        </script>
    </body>
</html>